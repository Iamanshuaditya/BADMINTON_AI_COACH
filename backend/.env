# ShuttleSense Environment Configuration
# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=ShuttleSense Video Coach API
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development
PORT=8001

# =============================================================================
# Security
# =============================================================================
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
JWT_ALGORITHM=HS256

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# AI / LLM Settings
# =============================================================================
# Use 'anthropic' to use the local proxy (antigravity-claude-proxy)
LLM_PROVIDER=anthropic
LLM_PROXY_URL=http://localhost:8080/v1

# The proxy might use this key, or use its own auth. 
# We set it here because the user mentioned using it.
GOOGLE_API_KEY=your_gemini_api_key_here

# =============================================================================
# Rate Limiting & Uploads
# =============================================================================
RATE_LIMIT_ENABLED=true
MAX_VIDEO_SIZE_MB=500
UPLOAD_DIR=./data/uploads
SESSIONS_DIR=./data/sessions
